<view class="page-todos">
  <view class="user">
    <image class="avatar" src="{{user.avatar  }}" background-size="cover" />
    <view class="nickname">
      {{user.nickName && user.nickName + "'s" || 'My'}} Todo List
    </view>
  </view>
  <view class="todo-items">
    <checkbox-group class="todo-items-group" onChange="onTodoChanged">
      <label
        for="{{todos}}"
        for-item="item"
        class="todo-item {{item.completed  }}"
        key="*this"
      >
        <checkbox
          class="todo-item-checkbox"
          value="{{item.text}}"
          checked="{{item.completed}}"
        />
        <text class="todo-item-text">{{item.text}}</text>
      </label>
    </checkbox-group>
  </view>
  <view class="todo-footer">
    <add-button text="Add Todo" onClickMe="addTodo" />
  </view>
</view>